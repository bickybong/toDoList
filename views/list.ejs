<!DOCTYPE html>
<html lang="en">
  <%- include("header"); -%>
  <body>
    <div class="box" id="heading">
      <h1><%=listTitle%></h1>
    </div>

    <div class="box">
      <!-- create lists of items -->
      <%for (const item of newListItems){%>
      <div class="item">
        <input type="checkbox" name="" id="" />
        <p><%=item%></p>
      </div>
      <%}%>
      <form action="/" method="post">
        <input type="text" name="newItem" placeholder="New item" autocomplete="off"/>
        <button type="submit" value=<%= listTitle%> name="list">+</button>
      </form>
    </div>
    <%- include("footer"); -%>

